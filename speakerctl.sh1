#!/bin/bash
speaker="alsa_output.pci-0000_00_1b.0.analog-stereo"
headset="alsa_output.usb-0d8c_C-Media_USB_Headphone_Set-00.iec958-stereo"

if [ "$1" == "speaker" ]
then
	echo "speaker!"
	output="$speaker"

elif [ "$1" == "headset" ]
then
	echo "headset!"
	output="$headset"

fi

pacmd set-default-sink $output
for source in $(pacmd list-sink-inputs | awk '$1 == "index:" {print $2}')
do
	echo "Switching" $source
	pacmd move-sink-input $source $output >/dev/null 2>&1
done

